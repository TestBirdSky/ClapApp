<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/greenbg">

            <ImageView
                android:id="@+id/toggle1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:src="@drawable/lefticon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <ImageView-->
            <!--                android:id="@+id/in_app_purchase"-->
            <!--                android:layout_width="@dimen/_25sdp"-->
            <!--                android:layout_height="@dimen/_25sdp"-->
            <!--                android:src="@drawable/inapppurchase"-->
            <!--                android:layout_marginEnd="@dimen/_20sdp"-->
            <!--                android:layout_marginTop="@dimen/_15sdp"-->
            <!--                app:layout_constraintTop_toTopOf="parent"-->
            <!--                app:layout_constraintEnd_toEndOf="parent" />-->


            <ImageView
                android:id="@+id/in_app_purchase"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:src="@drawable/inapppurchase"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/animal_sounds"
                android:textColor="@color/white"
                android:textSize="@dimen/_19ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/iv_apply"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:src="@drawable/active"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_to_start"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_apply"
                app:layout_constraintEnd_toEndOf="@+id/iv_apply"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/iv_apply"
                app:layout_constraintTop_toTopOf="@+id/iv_apply" />

            <ImageView
                android:id="@+id/iv_ringtones"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_50sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ringtones"
                app:layout_constraintBottom_toTopOf="@+id/iv_flashlight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/iv_flashlight"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="fitXY"
                android:src="@drawable/flashlight"
                app:layout_constraintBottom_toTopOf="@id/layout_ad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_ringtones"
                app:layout_constraintVertical_bias="0.5" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_ad"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@color/white"
                android:paddingHorizontal="6dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/iv_car"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_boy_game"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:singleLine="true"
                    android:text="Bus Wait Sucks? BREAKOUT NOW!"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/iv_car"
                    app:layout_constraintRight_toLeftOf="@id/tv_ad"
                    app:layout_constraintTop_toTopOf="@id/iv_car" />

                <TextView
                    android:id="@+id/tv_ad"
                    android:layout_width="26dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:background="#6F8E4C"
                    android:gravity="center"
                    android:text="AD"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_title"
                    app:layout_constraintLeft_toRightOf="@id/tv_title"
                    app:layout_constraintRight_toRightOf="@id/tv_des"
                    app:layout_constraintTop_toTopOf="@id/tv_title" />

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="3min games for boring queuesðŸšŒNo installs"
                    android:textColor="#906F8E4C"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_car"
                    app:layout_constraintLeft_toLeftOf="@id/tv_title"
                    app:layout_constraintRight_toLeftOf="@id/tv_play" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_play"
                    android:layout_width="46dp"
                    android:layout_height="32dp"
                    android:background="@drawable/shape_play"
                    android:gravity="center"
                    android:text="Play"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- <com.google.android.gms.ads.AdView-->
            <!--                android:id="@+id/adView"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentBottom="true"-->
            <!--                android:layout_centerHorizontal="true"-->
            <!--                app:adSize="BANNER"-->
            <!--                app:adUnitId="ca-app-pub-3940256099942544/6300978111"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>